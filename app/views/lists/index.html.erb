<% title "Lists" %>

<table>
  <tr>
    <th>Name</th>
    <th>List Date</th>
    <th>Description</th>
    <th>User</th>
    <th>Assigned To</th>
  </tr>
  <% for list in @lists %>
    <tr>
      <td><%= list.name %></td>
      <td><%= list.list_date %></td>
      <td><%= list.description %></td>
      <td><%= list.user_id %></td>
      <td><%= list.assigned_to %></td>
      <td><%= link_to "Show", list %></td>
      <td><%= link_to "Edit", edit_list_path(list) %></td>
      <td><%= link_to "Destroy", list, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New List", new_list_path(list) %></p>
