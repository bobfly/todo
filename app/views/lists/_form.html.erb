
  <div class="group">
    <%= f.label :name, t("activerecord.attributes.list.name", :default => "Name"), :class => :label %>
    <%= f.text_field :name, :class => 'text_field' %>
  </div>

  <div class="group">
    <%= f.label :list_date, t("activerecord.attributes.list.list_date", :default => "List date"), :class => :label %>
    <%= f.date_select :list_date, :class => 'date_select' %>
  </div>

  <div class="group">
    <%= f.label :description, t("activerecord.attributes.list.description", :default => "Description"), :class => :label %>
    <%= f.text_field :description, :class => 'text_field' %>
  </div>

  <div class="group">
    <%= f.label :assigned_to, t("activerecord.attributes.list.assigned_to", :default => "Assigned to"), :class => :label %>
    <%= f.collection_select :assigned_to, User.where(:created_by == current_user.id), :id, :username %>
  </div>
        
