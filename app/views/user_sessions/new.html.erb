<div id="box">
<div id="block-login" class="block">
  <h2>Login</h2>
<div class="content login">
<% form_for :user_session, @user_session, :url => { :action => "create" }, :class => "" do |f| %>
  <div class="flash">
      <%= f.error_messages %>
    </div>
  <div class="group wat-cf">
  <%= f.label :username %><br />
  <%= f.text_field :username %>
  </div>
  <div class="group wat-cf">
  <%= f.label :password %><br />
  <%= f.password_field :password %>
  </div>
  <p>
  <%= f.check_box :remember_me %><%= f.label :remember_me %>
  </p>  
  <div class="right">
  <button class="button" type="submit">
    <%= image_tag("web-app-theme/icons/key.png", :alt => "#{t("web-app-theme.login", :default => "Login")}") %> <%= t("web-app-theme.login", :default => "Login") %>
  </button>
    <% end %>
      </div>
</div>
</div>
    </div>